-- Receiver side - Simple: button press instantly starts finalscreen

local modem = peripheral.wrap("bottom") -- Wireless modem under computer
local channel = 1

if not modem then
    print("No modem found on bottom!")
    return
end

rednet.open("bottom")

print("Waiting for button press...")

while true do
    local event, side, senderChannel, replyChannel, message, distance = os.pullEvent("modem_message")

    if senderChannel == channel and message == "button_pressed" then
        print("Button pressed. Starting Finalscreen.")

        shell.run("finalscreen.lua")
        break -- Once finalscreen exits (shutdown), end program
    end
end
