-- First, make sure to connect the monitor to the computer
-- This code assumes the monitor is connected to the side of the computer

local monitor = peripheral.wrap("top")  -- Change the side if needed (e.g., "left", "right", "back", etc.)

-- Set the monitor size
monitor.setTextScale(0.5) -- Optional: Adjust text size on monitor
monitor.clear()  -- Clear the screen

-- Function to draw a square
function drawSquare()
    monitor.setCursorPos(5, 5)
    monitor.write("Square:")
    
    -- Drawing a square with simple characters
    for x = 5, 15 do
        monitor.setCursorPos(x, 6)
        monitor.write("X")
        monitor.setCursorPos(x, 14)
        monitor.write("X")
    end
    
    for y = 6, 14 do
        monitor.setCursorPos(5, y)
        monitor.write("X")
        monitor.setCursorPos(15, y)
        monitor.write("X")
    end
end

-- Function to draw a circle (simple approximation)
function drawCircle()
    monitor.setCursorPos(5, 16)
    monitor.write("Circle:")

    -- This is a simple approximation using asterisks for a circle shape
    local centerX = 10
    local centerY = 20
    local radius = 6

    for angle = 0, 360, 5 do
        local rad = math.rad(angle)
        local x = math.floor(centerX + radius * math.cos(rad))
        local y = math.floor(centerY + radius * math.sin(rad))
        monitor.setCursorPos(x, y)
        monitor.write("*")
    end
end

-- Call the drawing functions
drawSquare()
sleep(2) -- Wait for 2 seconds before drawing the circle
drawCircle()
