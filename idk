-- First, wrap the monitor to the computer (change the side if needed)
local monitor = peripheral.wrap("top")  -- Use the side where your monitor is connected

-- Set text scale for better readability
monitor.setTextScale(1)  -- Increase text size for readability
monitor.clear()

-- 1. Program Start Screen
function displayStartScreen()
    monitor.setCursorPos(4, 5)
    monitor.setTextColor(colors.white)
    monitor.write("==      Program    ==")
    
    monitor.setCursorPos(4, 6)
    monitor.write("==         Start        ==")
    sleep(2)  -- Sleep for 2 seconds before diagnostics
end

-- 2. Diagnostics
function runDiagnostics()
    monitor.clear()
    monitor.setCursorPos(5, 5)
    monitor.setTextColor(colors.white)
    monitor.write("Running Diagnostics...")
    sleep(1)

    local diagnostics = {
        {"CPU Check", "ok"},
        {"RAM Check", "ok"},
        {"Disk Check", "fail"},
        {"Network Check", "ok"},
        {"Graphics Check", "ok"},
        {"Battery Check", "fail"},
    }

    for i, diag in ipairs(diagnostics) do
        -- Add a small delay between each diagnostic line
        sleep(0.5)
        monitor.setCursorPos(5, 5 + i)
        monitor.write(diag[1] .. ": ")
        if diag[2] == "ok" then
            monitor.setTextColor(colors.green)
            monitor.write(diag[2])
        else
            monitor.setTextColor(colors.red)
            monitor.write(diag[2])
        end
    end
    sleep(3)  -- Sleep for 3 seconds before showing the logo
end

-- 3. Logo Display with Triangle and Text
function displayLogo()
    monitor.clear()

    -- Draw the triangle shape (inverted triangle, base at top, tip at the bottom)
    monitor.setTextColor(colors.white)
    for i = 1, 15 do
        monitor.setCursorPos(5 + i, 5)
        monitor.write("*")
        monitor.setCursorPos(5 + i, 5 + i)
        monitor.write("*")
    end

    -- Text over the triangle
    local width, height = monitor.getSize()
    
    -- Centering "TO SEARCH" and "AND" text
    monitor.setCursorPos(math.floor((width - 11) / 2), 6)
    monitor.setTextColor(colors.white)
    monitor.write("TO SEARCH")
    
    monitor.setCursorPos(math.floor((width - 3) / 2), 7)
    monitor.setTextColor(colors.white)
    monitor.write("AND")
    
    monitor.setCursorPos(math.floor((width - 7) / 2), 8)
    monitor.setTextColor(colors.red)  -- Make the "DESTROY" part red
    monitor.write("DESTROY")
    
    sleep(5)  -- Sleep for 5 seconds to display the logo
end

-- Main function to run everything
function main()
    displayStartScreen()
    runDiagnostics()
    displayLogo()
end

-- Run the main function
main()
