local gpu = peripheral.wrap("top")

-- Initialize screen size (get the screen size using getSize)
local width, height = gpu.getSize()
print("Screen size: " .. width .. "x" .. height)

-- Set the background color and text color
gpu.setBackgroundColor(colors.black)
gpu.setTextColor(colors.white)

-- Clear the screen
gpu.clear()

-- Set the text scale
gpu.setTextScale(1)

-- Write a simple message
gpu.setCursorPos(1, 1)
gpu.write("Hello World!")

-- Example: Draw a rectangle with a different color
gpu.setTextColor(colors.blue)
gpu.setCursorPos(1, 2)
gpu.write("This is a blue text line!")

-- You can also clear a line or scroll the screen
gpu.clearLine()  -- Clears the current line

-- Add any other desired functionality (like drawing shapes, etc.)

-- Use sleep to let the program run for a bit
sleep(2)
